{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "type-check": {
      "dependsOn": ["^type-check", "^build"]
    },
    "test": {
      "dependsOn": ["^test", "^build"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
